@model GigsApplication.Core.ViewModels.GigsViewModel
@{
    ViewBag.Title = Model.Heading;
}

<h2>@Model.Heading</h2>
@using (Html.BeginForm(Model.Action, "Gigs", FormMethod.Post,new { enctype = "multipart/form-data" })) {
    <p class="alert alert-info">All fields are <strong>Required</strong>.</p>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(e=>e.id)
<div class="form-group">
    <label>SongName</label>
    @Html.TextBoxFor(e=>e.Venue,new { @class="form-control" ,autofocus="autofocus"})
    @Html.ValidationMessageFor(e=>e.Venue)
</div>
<div class="form-group">
    @Html.LabelFor(e=>e.Date)
    @Html.TextBoxFor(e=>e.Date, new { @class = "form-control" ,placeholder="eg 1 jan 2022"})
    @Html.ValidationMessageFor(e=>e.Date)
</div>
<div class="form-group">
    @Html.LabelFor(e=>e.Time)
    @Html.TextBoxFor(e=>e.Time, new { @class = "form-control", placeholder = "eg 20:00" })
    @Html.ValidationMessageFor(e=>e.Time)
</div>
<div class="form-group">
    @Html.LabelFor(e=>e.Genre)
    @Html.DropDownListFor(e=>e.Genre,new SelectList(Model.Genres,"Id","Name"),"",new { @class="form-control" ,style = "color:gray;"})
    @Html.ValidationMessageFor(e=>e.Genre)
</div>
<div class="form-group">
    @Html.LabelFor(e => e.SongData)
   <input type="file" name="sound" value=""/>
    @Html.ValidationMessageFor(e => e.SongData)
</div>
<button type="submit"  class="btn btn-primary btn-lg">Save</button>

 
}
@section scripts{
    
@Scripts.Render("~/bundles/jqueryval")    
}